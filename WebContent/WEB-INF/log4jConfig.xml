<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="APPENDER_OUT" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <!-- Print the date in ISO 8601 format -->
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%C:%L] - %m%n"/>
    </layout>
  </appender>
    

 <!-- File utilizzato per il logging delle risorse (INFO) -->
 <appender name="INFO_FILE" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="logAccessi.log"/>
    <param name="Threshold" value="INFO"/>
    <param name="MaxFileSize" value="1000KB"/>
    <!-- Keep one backup file -->
    <param name="MaxBackupIndex" value="1"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%C:%L] - %m%n"/>
    </layout>
  </appender>
  
  <!-- File utilizzato per il debug delle classi (DEBUG)-->
  <appender name="DEBUG_FILE" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="debug.log"/>
    <param name="MaxFileSize" value="1000KB"/>
    <!-- Keep one backup file -->
    <param name="MaxBackupIndex" value="1"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%C:%L] - %m%n"/>
    </layout>
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
       <param name="LevelMax" value="DEBUG"/>
       <param name="LevelMin" value="DEBUG"/>
       <param name="AcceptOnMatch" value="true"/>
    </filter>
  </appender>
  
  
   <logger name="asteonline.logAccessi">
  	 <level value="INFO"/>
  	 <appender-ref ref="INFO_FILE" />
   </logger>
  
  <root>
    <level value="DEBUG"/>
    <appender-ref ref="DEBUG_FILE" />   
  </root>
  
</log4j:configuration>